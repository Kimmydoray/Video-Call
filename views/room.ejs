<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>videoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
      "<% if(typeof sessionId != 'undefined') { %>"
        const SESSION_ID = "<%= sessionId %>";
      "<% } %>"

      "<% if(typeof scheduleId != 'undefined') { %>"
        const SCHEDULE_ID = "<%= scheduleId %>";
      "<% } %>"
    </script>
    <style>
      .text-white {
        color: white;
      }
      .p-10 {
        padding: 10px;
      }
      .m-13 {
        margin: 13%;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>Esafe Video Chat</h2>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">
          <div id="video-name"></div>

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
        </div>

        <div class="options__right" title="End Sessions">
          <div id="endButton" class="options__button">
            <i class="fas fa-sign-out-alt"></i>
          </div>
        </div>
        <!-- <div class="options__right" style="display: none;"> -->
        <div class="options__right" style="display:none;">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script type="module" src="script.js"></script>
</html>
